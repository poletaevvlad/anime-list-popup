{
  "manifest_version": 2,
  "name": "AnimeList",
  "version": "0.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "default-src 'self' https://myanimelist.net",
  "permissions": [
    "storage",
    "identity",
    "https://myanimelist.net/v1/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "animelist@poletaevvlad.github.io"
    }
  }
}
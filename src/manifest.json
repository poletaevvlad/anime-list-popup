{
  "manifest_version": 2,
  "name": "Anime List Popup",
  "description": "Shows your anime list from MyAnimeList in the browser's toolbar.",
  "version": "0.1",
  "author": "Vlad Poletaev",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "assets/action-icon.svg",
    "default_title": "Anime List",
    "theme_icons": [
      {
        "dark": "assets/action-icon-dark.svg",
        "light": "assets/action-icon-light.svg",
        "size": 16
      },
      {
        "dark": "assets/action-icon-dark.svg",
        "light": "assets/action-icon-light.svg",
        "size": 32
      }
    ]
  },
  "icons": {
    "48": "./assets/image-48.png",
    "96": "./assets/image-96.png"
  },
  "content_security_policy": "default-src 'self' https://myanimelist.net https://api.myanimelist.net https://api-cdn.myanimelist.net",
  "permissions": [
    "storage",
    "identity",
    "https://myanimelist.net/v1/*",
    "https://api.myanimelist.net/v2/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "animelist@poletaevvlad.github.io"
    }
  }
}
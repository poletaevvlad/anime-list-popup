{
  "name": "animelist-ext",
  "version": "1.2.0",
  "scripts": {
    "build": "rm -rf dist && npx gulp release",
    "lint": "npx addons-linter dist",
    "watch": "npx gulp watch",
    "package": "rm -f dist.zip source.zip && cd dist && zip -r ../dist.zip * && cd .. && zip -r source.zip assets html sass src screenshots package.json package-lock.json test-preprocessor.js tsconfig.json LICENSE gulpfile.js README.md",
    "prepare": "husky install",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{ts,tsx}": "eslint"
  },
  "devDependencies": {
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/webextension-polyfill": "^0.8.1",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-plugin-react": "^7.29.4",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^5.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "prettier": "2.6.2",
    "sass": "^1.43.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack-stream": "^7.0.0"
  },
  "dependencies": {
    "async-mutex": "^0.2.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webextension-polyfill": "^0.8.0"
  }
}

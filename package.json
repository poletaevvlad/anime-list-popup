{
  "name": "animelist-ext",
  "version": "1.4.0",
  "scripts": {
    "build": "rm -rf dist && npx gulp release",
    "lint": "npx addons-linter dist",
    "watch": "npx gulp watch",
    "package": "rm -f dist.zip source.zip && cd dist && zip -r ../dist.zip * && cd .. && zip -r source.zip assets html sass src screenshots package.json package-lock.json test-preprocessor.js tsconfig.json LICENSE gulpfile.js README.md",
    "prepare": "husky install",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{ts,tsx}": "eslint"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-plugin-react": "^7.32.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-replace": "^1.1.4",
    "gulp-sass": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "2.8.3",
    "sass": "^1.57.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack-stream": "^7.0.0"
  },
  "dependencies": {
    "async-mutex": "^0.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0"
  }
}
